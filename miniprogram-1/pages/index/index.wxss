}
.slider{
  width: 650rpx;
  margin: 0 auto ;
  margin: 40rpx auto;
}
.task_text{
  height: 120rpx;
  text-align: center;
  margin: 30rpx auto;
}
.task_text .task_tittle{
  font-size: 35rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.task_text .task_desc{
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #999999;
}
/* icon */
.task_cate{
  display: flex;
  width: 780rpx;
  flex-wrap: wrap;
  padding-top: 40rpx;
  margin: 0 auto;
}
.cate_item{
  width: 780rpx;
  margin: 0 auto; 
  display: flex;
  flex-wrap: wrap;
  height: 100rpx;
  text-align: center;
}
.task_cate .cate_item .cate_icon{
  height: 180rpx;
  margin: 0 65rpx;
  padding-left: 50rpx;
}
.task_cate .cate_item .cate_icon image{
  width: 60rpx;
  height: 60rpx;
}
.task_cate .cate_item .cate_text{
  height: 60rpx;
  font-size: 30rpx;
}
.task_cate .cate_item .cate_text_active{
  color: #E7625F;
}

/* 专注按钮 */
.start{
  width: 200rpx;
  height: 90rpx;
  border: 2rpx solid #E7624F;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 400rpx;
  text-align: center;
  line-height: 90rpx;
  color: #E7624F;
}

/* 时钟计时 */
.clock{
  background-color:#E7624F;
  overflow: hidden;
}
.progress{
  width: 400rpx;
  height: 400rpx;
  background-color: orange;
  margin: 140rpx auto;
  position: relative;
}
.progress .progress_bg,.progress .progress_active{
  position: absolute;
  left: 0;
  top: 0;
  width: 400rpx;
  height: 400rpx;
}
.progress .progress_text{
  position: absolute;
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 35rpx;
  color: #fff;
  text-align: center;
  left: 100rpx;
  top: 175rpx;
}
/* 按钮 */
.btns .okBtn,.btns .pauseBtn,.btns .continueBtn,.btns .cancleBtn{
  width: 280rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  border: 3rpx solid #fff;
  border-radius: 20rpx;
  margin: 0 auto 20rpx auto;
}